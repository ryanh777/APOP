<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SurveyActivity"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/id_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PET SURVEY??"
            android:textAlignment="center"
            android:textSize="50sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/gap_margin"/>

        <TextView
            android:id="@+id/id_label_pet_name"
            android:layout_below="@id/id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextShadow"
            android:text="Pet Name"
            android:layout_marginStart="@dimen/label_text_margin_start"
            android:layout_marginBottom="@dimen/label_text_margin_bottom"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/id_petname_card"
            android:layout_below="@id/id_label_pet_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            app:cardElevation="7dp"
            android:layout_marginHorizontal="@dimen/edittext_margin"
            android:layout_marginBottom="@dimen/gap_margin"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/colorWhite">
            <EditText
                android:id="@+id/id_pet_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:maxLines="1"
                android:inputType="text"
                android:importantForAutofill="no"
                android:paddingHorizontal="20dp"
                android:textColorHint="#c7c7c7"
                android:textColor="@color/colorDarkBlue"/>
        </androidx.cardview.widget.CardView>

        <RadioGroup
            android:id="@+id/id_pet_type_group"
            android:layout_below="@id/id_petname_card"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleY="2"
            android:scaleX="2"
            android:layout_marginBottom="@dimen/gap_margin"
            android:layout_marginStart="@dimen/edittext_margin"
            android:layout_marginEnd="@dimen/edittext_margin">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:buttonTint="@color/colorDarkBlue"
                android:text="Dog"
                android:layout_marginEnd="10dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorDarkBlue"
                android:text="Cat"
                android:layout_marginStart="5dp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/id_label_breed"
            android:layout_below="@id/id_pet_type_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breed"
            android:layout_marginStart="@dimen/label_text_margin_start"
            android:textSize="@dimen/label_text_size"
            android:layout_marginBottom="@dimen/label_text_margin_bottom"/>

        <Spinner
            android:id="@+id/id_breed"
            android:layout_below="@id/id_label_breed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:background="@drawable/rounded_edittext"
            android:layout_marginStart="@dimen/edittext_margin"
            android:layout_marginEnd="@dimen/edittext_margin"/>

        <TextView
            android:id="@+id/id_spinner_text"
            android:layout_below="@id/id_label_breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDarkBlue"
            android:text="yoooo"
            android:textSize="@dimen/label_text_size"
            android:layout_marginStart="@dimen/label_text_margin_start"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/id_label_age"
            android:layout_below="@id/id_breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:layout_marginStart="@dimen/label_text_margin_start"
            android:textSize="@dimen/label_text_size"
            android:layout_marginTop="@dimen/gap_margin"
            android:layout_marginBottom="@dimen/label_text_margin_bottom"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/id_age_card"
            android:layout_below="@id/id_label_age"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            app:cardElevation="7dp"
            android:layout_marginHorizontal="@dimen/edittext_margin"
            android:layout_marginBottom="@dimen/gap_margin"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/colorWhite">
            <EditText
                android:id="@+id/id_age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:maxLines="1"
                android:inputType="numberDecimal"
                android:importantForAutofill="no"
                android:paddingHorizontal="20dp"
                android:textColorHint="#c7c7c7"
                android:textColor="@color/colorDarkBlue"/>
        </androidx.cardview.widget.CardView>

        <RadioGroup
            android:id="@+id/id_gender_group"
            android:layout_below="@id/id_age_card"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleX="2"
            android:scaleY="2"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="120dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:buttonTint="@color/colorDarkBlue"
                android:text="Female Spayed"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorDarkBlue"
                android:text="Female"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:buttonTint="@color/colorDarkBlue"
                android:text="Male Neutered"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorDarkBlue"
                android:text="Male"/>
        </RadioGroup>

        <TextView
            android:id="@+id/id_label_num_dogs"
            android:layout_below="@id/id_gender_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Dogs in Household"
            android:layout_marginStart="@dimen/label_text_margin_start"
            android:textSize="@dimen/label_text_size"
            android:layout_marginBottom="@dimen/label_text_margin_bottom"/>

        <SeekBar
            android:id="@+id/id_num_dogs"
            android:layout_below="@id/id_label_num_dogs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:minHeight="10dp"
            android:max="5"
            android:thumb="@drawable/seekbar_thumb"
            android:tickMark="@drawable/seekbar_tickmark"
            android:progressTint="@android:color/transparent"
            android:paddingStart="@dimen/edittext_margin"
            android:paddingEnd="@dimen/edittext_margin"
            android:layout_marginBottom="@dimen/gap_margin"/>

        <TextView
            android:id="@+id/id_label_num_cats"
            android:layout_below="@id/id_num_dogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Cats in Household"
            android:layout_marginStart="@dimen/label_text_margin_start"
            android:textSize="@dimen/label_text_size"
            android:layout_marginBottom="@dimen/label_text_margin_bottom"/>

        <SeekBar
            android:id="@+id/id_num_cats"
            android:layout_below="@id/id_label_num_cats"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:minHeight="10dp"
            android:max="5"
            android:thumb="@drawable/seekbar_thumb"
            android:tickMark="@drawable/seekbar_tickmark"
            android:progressTint="@android:color/transparent"
            android:paddingStart="@dimen/edittext_margin"
            android:paddingEnd="@dimen/edittext_margin"
            android:layout_marginBottom="@dimen/gap_margin"/>

        <TextView
            android:id="@+id/id_label_owner_weight"
            android:layout_below="@id/id_num_cats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner Weight Assessment"
            android:layout_marginStart="@dimen/label_text_margin_start"
            android:textSize="@dimen/label_text_size"
            android:layout_marginBottom="@dimen/label_text_margin_bottom"/>

        <SeekBar
            android:id="@+id/id_owner_weight"
            android:layout_below="@id/id_label_owner_weight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:minHeight="10dp"
            android:max="4"
            android:thumb="@drawable/seekbar_thumb"
            android:tickMark="@drawable/seekbar_tickmark"
            android:progressTint="@android:color/transparent"
            android:paddingStart="@dimen/edittext_margin"
            android:paddingEnd="@dimen/edittext_margin"
            android:layout_marginBottom="@dimen/gap_margin"/>

        <TextView
            android:id="@+id/id_label_bcss"
            android:layout_below="@id/id_owner_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Body Condition Scoring System"
            android:layout_marginStart="@dimen/label_text_margin_start"
            android:textSize="@dimen/label_text_size"
            android:layout_marginBottom="@dimen/label_text_margin_bottom"/>

        <SeekBar
            android:id="@+id/id_bcss"
            android:layout_below="@id/id_label_bcss"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:minHeight="10dp"
            android:max="8"
            android:thumb="@drawable/seekbar_thumb"
            android:tickMark="@drawable/seekbar_tickmark"
            android:progressTint="@android:color/transparent"
            android:paddingStart="@dimen/edittext_margin"
            android:paddingEnd="@dimen/edittext_margin"
            android:layout_marginBottom="@dimen/gap_margin"/>

        <TextView
            android:id="@+id/id_label_weight"
            android:layout_below="@id/id_bcss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:layout_marginStart="@dimen/label_text_margin_start"
            android:textSize="@dimen/label_text_size"
            android:layout_marginBottom="@dimen/label_text_margin_bottom"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/id_weight_card"
            android:layout_below="@id/id_label_weight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            app:cardElevation="7dp"
            android:layout_marginHorizontal="@dimen/edittext_margin"
            android:layout_marginBottom="@dimen/gap_margin"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/colorWhite">
            <EditText
                android:id="@+id/id_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:maxLines="1"
                android:inputType="text"
                android:importantForAutofill="no"
                android:paddingHorizontal="20dp"
                android:textColorHint="#c7c7c7"
                android:textColor="@color/colorDarkBlue"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/id_label_medical"
            android:layout_below="@id/id_weight_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous Medical Conditions"
            android:layout_marginStart="@dimen/label_text_margin_start"
            android:textSize="@dimen/label_text_size"
            android:layout_marginBottom="@dimen/label_text_margin_bottom"/>

        <EditText
            android:id="@+id/id_medical"
            android:layout_below="@id/id_label_medical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/multiline_edittext"
            android:inputType="textMultiLine"
            android:lines="5"
            android:scrollbars="vertical"
            android:gravity="top|start"
            android:textColor="@color/colorDarkBlue"
            android:importantForAutofill="no"
            android:hint="Roofus"
            android:padding="@dimen/edittext_padding"
            android:layout_marginStart="@dimen/edittext_margin"
            android:layout_marginEnd="@dimen/edittext_margin"
            android:layout_marginBottom="@dimen/gap_margin"/>

        <TextView
            android:id="@+id/id_label_comments"
            android:layout_below="@id/id_medical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:layout_marginStart="@dimen/label_text_margin_start"
            android:textSize="@dimen/label_text_size"
            android:layout_marginBottom="@dimen/label_text_margin_bottom"/>

        <EditText
            android:id="@+id/id_comments"
            android:layout_below="@id/id_label_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/multiline_edittext"
            android:inputType="textMultiLine"
            android:lines="5"
            android:scrollbars="vertical"
            android:gravity="top|start"
            android:textColor="@color/colorDarkBlue"
            android:importantForAutofill="no"
            android:hint="Roofus"
            android:padding="@dimen/edittext_padding"
            android:layout_marginStart="@dimen/edittext_margin"
            android:layout_marginEnd="@dimen/edittext_margin"
            android:layout_marginBottom="@dimen/gap_margin"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/id_image_card"
            android:layout_below="@id/id_comments"
            android:layout_width="150dp"
            android:layout_height="@dimen/edittext_height"
            app:cardElevation="7dp"
            android:layout_marginHorizontal="@dimen/edittext_margin"
            android:layout_marginBottom="@dimen/gap_margin"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/colorLimeGreen">
            <Button
                android:id="@+id/id_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:text="Take Images"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/id_imageviews"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@id/id_image_card"
            android:layout_marginBottom="2dp">
            <ImageView
                android:id="@+id/id_imageview_1"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
            <ImageView
                android:id="@+id/id_imageview_2"
                android:layout_marginHorizontal="-10dp"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
            <ImageView
                android:id="@+id/id_imageview_3"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_image_buttons"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_imageviews"
            android:paddingBottom="@dimen/gap_margin">

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@color/colorLimeGreen"
                    android:layout_gravity="center">
                    <Button
                        android:id="@+id/imageButton1"
                        android:text="Side"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@null"/>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="-10dp"
                android:layout_gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@color/colorLimeGreen"
                    android:layout_gravity="center">
                    <Button
                        android:id="@+id/imageButton2"
                        android:text="Front"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@null"/>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@color/colorLimeGreen"
                    android:layout_gravity="center">
                    <Button
                        android:id="@+id/imageButton3"
                        android:text="Top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@null"/>
                </androidx.cardview.widget.CardView>
            </FrameLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/id_submit_card"
            android:layout_below="@id/id_image_buttons"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            app:cardElevation="7dp"
            android:layout_marginHorizontal="@dimen/edittext_margin"
            android:layout_marginBottom="@dimen/gap_margin"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/colorDarkBlue">
            <Button
                android:id="@+id/id_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:text="SUBMIT"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>