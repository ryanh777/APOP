<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SubmissionActivity"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/id_image"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/apop_logo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/id_head"
        android:layout_below="@id/id_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thank You!"
        android:textColor="@color/colorWhite"
        android:textSize="40sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/id_link_card"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@id/id_head"
        android:layout_marginHorizontal="@dimen/edittext_margin"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/gap_margin"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="30dp"
        app:cardElevation="3dp">

        <Button
            android:id="@+id/id_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/edittext_margin"
            android:layout_marginVertical="5dp"
            android:background="@null"
            android:text="Visit petobesityprevention.org to learn more about how your data will be used"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkBlue"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/id_submit_card"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height"
        app:cardElevation="7dp"
        android:layout_marginHorizontal="@dimen/edittext_margin"
        android:layout_marginBottom="@dimen/gap_margin"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/colorDarkBlue">

        <Button
            android:id="@+id/id_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:background="@null"
            android:text="SUBMIT ANOTHER SURVEY"
            android:layout_marginHorizontal="@dimen/edittext_margin"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>